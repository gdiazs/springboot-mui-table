# Use the public npm registry (override enterprise/corporate registry)
registry=https://registry.npmjs.org/

# Disable SSL certificate verification (helpful behind corporate proxies or MITM setups)
strict-ssl=false

# Do not require auth tokens (bypass corporate authentication)
always-auth=false

# Increase timeouts for better reliability in restricted networks
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
